{
  "name": "@vanta-design/desktop",
  "version": "0.0.2",
  "description": "Design system for Torln",
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "**/*.css.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vanta-design/desktop.git"
  },
  "scripts": {
    "dev": "bun run storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "commit": "bun run format && git add . && cz",
    "format": "bun run check && biome check --fix",
    "check": "tsc --noEmit",
    "build": "bun run format && rimraf dist && rollup -c"
  },
  "maintainers": [
    {
      "name": "Taeyeong Kim",
      "email": "t.yeong.kim@torln.com",
      "url": "https://github.com/cottons-kr"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1.17.4",
    "classnames": "^2.5.1",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@storybook/react-vite": "9.0.13",
    "@types/bun": "^1.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vanilla-extract/rollup-plugin": "^1.4.1",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-node-externals": "^8.1.1",
    "rollup-plugin-typescript-paths": "^1.5.0"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
