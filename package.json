{
  "name": "@vanta-design/desktop",
  "version": "0.0.6",
  "description": "Design System for Torln",
  "license": "MIT",
  "type": "module",
  "sideEffects": [
    "**/*.css.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vanta-design/desktop.git"
  },
  "scripts": {
    "dev": "bun run storybook",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "commit": "git add . && cz",
    "lint": "biome lint --fix",
    "check": "tsc --noEmit",
    "build": "rimraf dist && rollup -c",
    "prepublishOnly": "bun run build"
  },
  "maintainers": [
    {
      "name": "Taeyeong Kim",
      "email": "cottons@torln.com",
      "url": "https://github.com/tyeongkim"
    }
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@vanilla-extract/css": "^1.17.4",
    "classnames": "^2.5.1",
    "flowness": "^0.1.2",
    "lucide-react": "0.553.0",
    "motion": "^12.23.24",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@storybook/react-vite": "9.0.13",
    "@types/bun": "^1.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vanilla-extract/rollup-plugin": "^1.4.1",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-esbuild": "^6.2.1",
    "rollup-plugin-node-externals": "^8.1.1",
    "rollup-plugin-typescript-paths": "^1.5.0"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    },
    "./icon": {
      "import": "./dist/icon.js",
      "types": "./dist/src/icon.d.ts"
    }
  },
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ]
}
